put unzip epipipe.zip into a folder:
    .i.e ~/install
update .profile/.bashrc with following:
    echo "export PYTHONPATH=\$PYTHONPATH:~/install/epipipe/" >> ~/.profile
    ##or (copy this into the dot file in ~/)
    export PYTHONPATH=$PYTHONPATH:~/install/epipipe/
CREATE MAKEFILE
    000_makefile

EXECUTE:
    # ~/install/epipipe/epipaleomix.py dryrun path/to/makefile
    # ~/install/epipipe/epipaleomix.py run path/to/makefile
    # ~/install/epipipe/epipaleomix.py -h  # for help
         --max-threads "default 4 integer"
         --destination "default ./OUTPUT"
         --temp-root   "default ./temp"

