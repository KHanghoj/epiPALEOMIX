README for installation, setup and running Epipaleomix.

put unzip epipipe.zip into a folder:
    .i.e ~/install
update .profile/.bashrc by write following in terminal:
	echo "export PYTHONPATH=$PYTHONPATH:/home/krishang/install/epipipe/ >> ~/.profile"

CREATE MAKE FILE TEMPLATE
    # prints to std.out (standard out)
    ~/install/epipipe/epipaleomix/epaleomix.py makefile >  000_makefile.yaml

EXECUTE:
        ~/install/epipipe/epipaleomix/epaleomix.py mkfile > 003_mkfile.yaml
        # Fill in the paths/options in 003_mkfile.yaml
        ~/install/epipipe/epipaleomix/epaleomix.py dryrun 003_mkfile.yaml
        # simple version with 4 cores (default)
        ~/install/epipipe/epipaleomix/epipaleomix.py run 003_mkfile.yaml
        # defining destination paths and temporary folders:
        ~/install/epipipe/epipaleomix/epipaleomix.py -h  # for help

TOOLS/PACKAGES required:
-- Bedtools
-- Python 2.7:
        -- Pysam
-- R:
        -- ggplot2
        -- reshape2
        -- gridExtra
